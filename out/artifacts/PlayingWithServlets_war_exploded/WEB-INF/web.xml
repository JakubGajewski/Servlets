<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Head First Servlet and JSP</display-name>

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>pl.jg.main.controller.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MathsServlet</servlet-name>
        <servlet-class>pl.jg.maths.controller.MathsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MathsServlet</servlet-name>
        <url-pattern>/maths</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CalkiemSpokoServlet</servlet-name>
        <servlet-class>pl.jg.main.OldStyleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalkiemSpokoServlet</servlet-name>
        <url-pattern>/zupa</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JeszczeBardziejSpokoServlet</servlet-name>
        <servlet-class>pl.jg.main.controller.ModernServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JeszczeBardziejSpokoServlet</servlet-name>
        <url-pattern>/lupa</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LetniServlet</servlet-name>
        <servlet-class>pl.jg.main.controller.AgeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LetniServlet</servlet-name>
        <url-pattern>/age</url-pattern>
    </servlet-mapping>

</web-app>

